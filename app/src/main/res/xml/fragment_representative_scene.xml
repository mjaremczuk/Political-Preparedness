<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/search_title"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingStart="@dimen/default_padding"
            android:paddingEnd="@dimen/default_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/address_line_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_title" />
        <Constraint
            android:id="@+id/address_line_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/address_line_1"
            app:layout_constraintStart_toStartOf="@+id/address_line_1"
            app:layout_constraintTop_toBottomOf="@id/address_line_1" />
        <Constraint
            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/state"
            app:layout_constraintStart_toStartOf="@+id/address_line_1"
            app:layout_constraintTop_toBottomOf="@id/address_line_2" />
        <Constraint
            android:id="@+id/state"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/city"
            app:layout_constraintEnd_toEndOf="@+id/address_line_1"
            app:layout_constraintStart_toEndOf="@id/city"
            app:layout_constraintTop_toTopOf="@id/city" />
        <Constraint
            android:id="@+id/zip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/city"
            app:layout_constraintStart_toStartOf="@+id/address_line_1"
            app:layout_constraintTop_toBottomOf="@id/city" />
        <Constraint
            android:id="@+id/button_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/address_line_1"
            app:layout_constraintStart_toStartOf="@+id/address_line_1"
            app:layout_constraintTop_toBottomOf="@id/zip" />
        <Constraint
            android:id="@+id/button_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/address_line_1"
            app:layout_constraintStart_toStartOf="@+id/address_line_1"
            app:layout_constraintTop_toBottomOf="@id/button_search" />
        <Constraint
            android:id="@+id/representative_title_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/representative_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/representative_title" />

        <Constraint
            android:id="@+id/representative_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            app:layout_constraintEnd_toEndOf="@+id/address_line_1"
            app:layout_constraintStart_toStartOf="@+id/address_line_1"
            app:layout_constraintTop_toBottomOf="@id/button_location" />
        <Constraint
            android:id="@+id/representative_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/representative_title" />
        <Constraint
            android:id="@+id/representatives_loading"
            android:layout_width="54dp"
            app:visibilityMode="ignore"
            android:layout_height="54dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/representative_recycler"
            app:layout_constraintEnd_toEndOf="@+id/representative_recycler"
            app:layout_constraintStart_toStartOf="@+id/representative_recycler"
            app:layout_constraintTop_toTopOf="@id/representative_recycler" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/search_title"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingStart="@dimen/default_padding"
            android:paddingEnd="@dimen/default_padding"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/address_line_1"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/address_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/address_line_2"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/address_line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/city"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/zip"
            app:layout_constraintEnd_toStartOf="@id/state"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/state"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/city"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/city"
            app:layout_constraintTop_toTopOf="@id/city" />
        <Constraint
            android:id="@+id/zip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/button_search"
            app:layout_constraintEnd_toEndOf="@id/city"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/button_location" />
        <Constraint
            android:id="@+id/button_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/representative_title" />
        <Constraint
            android:id="@+id/representative_title_bg"
            android:layout_width="0dp"
            android:layout_height="?actionBarSize"
            android:alpha="1"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/representative_title"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:alpha="0"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/representative_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/representative_title" />
    </ConstraintSet>

    <Transition
        android:id="@+id/animate_list_header"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragUp"
            app:moveWhenScrollAtTop="true"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@+id/representative_recycler"
            app:touchAnchorSide="top"
            app:touchRegionId="@id/representative_recycler" />

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="10"
                app:motionTarget="@+id/representative_title" />
            <KeyAttribute
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="10"
                app:motionTarget="@+id/search_title" />
            <KeyAttribute
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="20"
                app:motionTarget="@+id/address_line_1" />
            <KeyAttribute
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="30"
                app:motionTarget="@+id/address_line_2" />
            <KeyAttribute
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="40"
                app:motionTarget="@+id/city" />
            <KeyAttribute
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="40"
                app:motionTarget="@+id/state" />
            <KeyAttribute
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="50"
                app:motionTarget="@+id/zip" />
            <KeyAttribute
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="60"
                app:motionTarget="@+id/button_search" />
            <KeyAttribute
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="70"
                app:motionTarget="@+id/button_location" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
